{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/column-formatting.schema.json",
  "elmType": "div",
  "style": {
    "font-size": "30px",
    "margin-top": "7px"
  },
  "children": [
    {
      "elmType": "span",
      "style": {
        "height": "25px",
        "width": "25px",
        "background-color": "=if(@currentField == '', '', if(@currentField == 'Blanco', '#ffffff', if(@currentField == 'Verde', 'green', if(@currentField == 'Rojo', 'red', '#000000'))))",
        "border-radius": "50%"
      },
      "attributes": {
        "title": "@currentField"
      }
    }
  ]
}
